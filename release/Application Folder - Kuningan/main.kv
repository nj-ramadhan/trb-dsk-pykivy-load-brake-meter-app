# ScreenManager:
<RootScreen>:
    id: screen_manager
    transition: NoTransition()

    ScreenHome:
        id: screen_home
        name: 'screen_home'
        screen_manager: screen_manager

    ScreenLogin:
        id: screen_login
        name: 'screen_login'
        screen_manager: screen_manager

    ScreenMain:
        id: screen_main
        name: 'screen_main'
        screen_manager: screen_manager

    ScreenMenu:
        id: screen_menu
        name: 'screen_menu'
        screen_manager: screen_manager

    ScreenAddQueue:
        id: screen_add_queue
        name: 'screen_add_queue'
        screen_manager: screen_manager

    ScreenCalibration:
        id: screen_calibration
        name: 'screen_calibration'
        screen_manager: screen_manager

    ScreenLoadMeter:
        id: screen_load_meter
        name: 'screen_load_meter'
        screen_manager: screen_manager   

    ScreenBrakeMeter:
        id: screen_brake_meter
        name: 'screen_brake_meter'
        screen_manager: screen_manager   

    ScreenHandbrakeMeter:
        id: screen_handbrake_meter
        name: 'screen_handbrake_meter'
        screen_manager: screen_manager   

    ScreenResume:
        id: screen_resume
        name: 'screen_resume'
