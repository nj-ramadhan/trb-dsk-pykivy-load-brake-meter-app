#:kivy 2.1.0

<ScreenResume>:
    MDBoxLayout:
        orientation: "vertical"

		# header layout
        MDBoxLayout:
            id: header_layout
            orientation: "horizontal"
            padding: 20
			spacing: 20
			size_hint_y: 0.2
			md_bg_color: "#111111"
                    
            Image:
                id: logo
                source:'assets/images/logo-trb.png'
                size_hint_x: 0.15
                allow_stretch: True 

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.7

				MDLabel:
					id: title            
					text: "VEHICLE INSPECTION INTEGRATION MANAGEMENT SYSTEM"
					halign: "left"
					valign: "middle"
					font_style: 'H4'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: subtitle            
					text: "AXLE LOAD & BRAKE METER"
					halign: "left"
					valign: "middle"
					font_style: 'H5'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.15

				MDLabel:
					id: lb_time
					text: "12:34:00"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_date
					text: "17/08/2024"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_operator
					text: "Nama Operator"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_comm
					text: "Status : Disconnected"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"

		# main layout
		MDBoxLayout:
			id: layout_main
			orientation: "horizontal"
			size_hint_y: 0.7
			padding:20
			spacing:20

			MDBoxLayout:
				id: layout_display
				orientation: "horizontal"
						
				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.5
					padding:20
					spacing:20

					MDLabel:
						text: "DETAIL PENGUJIAN"
						halign: "center"
						valign: "middle"
						font_style: 'H6'
						size_hint_y: 0.05

					MDBoxLayout:
						orientation: "horizontal"
						size_hint_y: 0.05
						MDLabel:
							text: "Sumbu No."
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.25

						MDLabel:
							text: "Total Berat"
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.25
						
						MDLabel:
							text: "Gaya Rem Utama"
							halign: "left"
							valign: "middle"
							font_style: 'H6'	
							size_hint_x: 0.25					

						MDLabel:
							text: "Gaya Rem Parkir"
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.25

					MDScrollView:
						id: layout_scroll_load
						size_hint_y: 0.3
						scroll_timeout:100
						MDList:
							id: layout_list_load

					MDBoxLayout:
						orientation: "horizontal"
						md_bg_color: "#FFFFFF"
						size_hint_y: 0.05
						MDLabel:
							text: "Total"
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.25

						MDLabel:
							id: lb_load_value_sum
							text: "Total Berat"
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.25
						
						MDLabel:
							id: lb_brake_value_sum
							text: "Gaya Rem Utama"
							halign: "left"
							valign: "middle"
							font_style: 'H6'	
							size_hint_x: 0.25					

						MDLabel:
							id: lb_handbrake_value_sum
							text: "Gaya Rem Parkir"
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.25	

					MDBoxLayout:
						orientation: "horizontal"
						size_hint_y: 0.05
						MDLabel:
							text: "Sumbu No."
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.15	

						MDLabel:
							text: "Berat"
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.15	
						
						MDLabel:
							text: "Rem Kiri"
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.15							

						MDLabel:
							text: "Rem Kanan"
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.15	

						MDLabel:
							text: "Selisih"
							halign: "left"
							valign: "middle"
							font_style: 'H6'	
							size_hint_x: 0.15						

						MDLabel:
							text: "Status"
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.25	

					MDScrollView:
						id: layout_scroll_brake
						size_hint_y: 0.3
						scroll_timeout:100
						MDList:
							id: layout_list_brake

					MDBoxLayout:
						orientation: "horizontal"
						size_hint_y: 0.05
						MDLabel:
							text: "Sumbu No."
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.15

						MDLabel:
							text: "Berat"
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.15
						
						MDLabel:
							text: "Gaya Rem"
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.15						

						MDLabel:
							text: "Selisih"
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.15			

						MDLabel:
							text: "Status"
							halign: "left"
							valign: "middle"
							font_style: 'H6'
							size_hint_x: 0.2

						MDLabel:
							text: "Keterangan"
							halign: "left"
							valign: "bottom"
							font_style: 'H6'
							size_hint_x: 0.2

					MDScrollView:
						id: layout_scroll_handbrake
						size_hint_y: 0.3
						scroll_timeout:100
						MDList:
							id: layout_list_handbrake

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.5

					MDBoxLayout:
						orientation: "horizontal"
						size_hint_y: 0.1

						MDLabel:
							text: "RESUME HASIL PENGUJIAN"
							halign: "center"
							valign: "middle"
							font_style: 'H6'

					MDLabel:
						id: lb_test_result
						halign: "center"
						valign: "middle"
						theme_text_color: "Custom"
						font_style: 'H3'
						size_hint_y: 0.25

					MDBoxLayout:
						orientation: "horizontal"
						spacing: 20
						size_hint_y: 0.1

						MDRectangleFlatIconButton:
							id: bt_back
							text: "KEMBALI"
							icon: "arrow-left"
							theme_text_color: "Custom"
							text_color: "#EEEEEE"
							md_bg_color: "4471C4"
							size_hint_x: 0.5
							on_press: root.exec_navigate_back()

						MDRectangleFlatIconButton:
							id: bt_save
							text: "SIMPAN"
							icon: "printer"
							theme_text_color: "Custom"
							text_color: "#EEEEEE"
							md_bg_color: "#2CA02C"
							disabled: True
							size_hint_x: 0.5
							on_press: root.exec_save()

		# footer layout
        MDBoxLayout:
            orientation: "horizontal"
			size_hint_y: 0.1

			MDBoxLayout:
				orientation: "horizontal"
				padding: 20
				spacing: 20
				md_bg_color: "#4471C4"
				size_hint_x: 0.4
				
				AsyncImage:
					id: img_pemkab
					source:'assets/images/logo-sorong.png'
					size_hint_x: 0.1
					allow_stretch: True  

				AsyncImage:
					id: img_dishub
					source:'assets/images/logo-dishub.png'
					size_hint_x: 0.1
					allow_stretch: True  

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.8

					MDLabel:
						id: lb_pemkab
						text: "PEMERINTAH KABUPATEN SORONG"
						halign: "left"
						valign: "middle"
						theme_text_color: "Custom"
						text_color: "#EEEEEE"						
						font_style: 'Subtitle1'

					MDLabel:
						id: lb_dishub
						text: "DINAS PERHUBUNGAN"
						halign: "left"
						valign: "middle"
						theme_text_color: "Custom"
						text_color: "#EEEEEE"
						font_style: 'Subtitle1'

					MDLabel:
						id: lb_unit			
						text: "UNIT PELAKSANA UJI BERKALA KENDARAAN BERMOTOR"
						halign: "left"
						valign: "middle"
						theme_text_color: "Custom"
						text_color: "#EEEEEE"
						font_style: 'Subtitle1'

					MDLabel:
						id: lb_unit_address
						text: " Klamasen, Distrik Mariat, Kabupaten Sorong, Papua Barat Daya. 98416"
						halign: "left"
						valign: "middle"
						md_bg_color: "#EEEEEE"
						theme_text_color: "Custom"
						text_color: "#000000"
						font_style: 'Subtitle1'

			MDBoxLayout:
				orientation: "vertical"
				padding: 20
				spacing: 20
				md_bg_color: "#FFC000"
				size_hint_x: 0.6

				MDLabel:			
					text: "INFORMASI"
					halign: "left"
					valign: "middle"
					font_style: 'H5'

				MDLabel:
					id: lb_info
					text: ""
					halign: "left"
					valign: "middle"
					font_style: 'H6'