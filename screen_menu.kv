#:kivy 2.1.0

<ScreenMenu>:
    MDBoxLayout:
        orientation: "vertical"

		# header layout
        MDBoxLayout:
            id: header_layout
            orientation: "horizontal"
            padding: 20
			spacing: 20
			size_hint_y: 0.2
			md_bg_color: "#111111"
                    
            Image:
                id: logo
                source:'assets/images/logo-trb.png'
                size_hint_x: 0.15
                allow_stretch: True 

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.7

				MDLabel:
					id: title            
					text: "VEHICLE INSPECTION INTEGRATION MANAGEMENT SYSTEM"
					halign: "left"
					valign: "middle"
					font_style: 'H4'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: subtitle            
					text: "AXLE LOAD & BRAKE METER"
					halign: "left"
					valign: "middle"
					font_style: 'H5'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.15

				MDLabel:
					id: lb_time
					text: "12:34:00"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_date
					text: "17/08/2024"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_operator
					text: "Nama Operator"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_comm
					text: "Status : Disconnected"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"

		# main layout
		MDBoxLayout:
			id: layout_main
			orientation: "horizontal"
			size_hint_y: 0.7
			padding:20
			spacing:20

			MDBoxLayout:
				id: layout_display
				orientation: "horizontal"
						
				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.5
					padding:20
					spacing:20

					MDBoxLayout:
						orientation: "vertical"
						size_hint_y: 0.75
						spacing:10

						MDLabel:
							text: "IDENTITAS KENDARAAN"
							halign: "center"
							valign: "middle"
							font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "No. Antrian"
								halign: "left"
								valign: "middle"
								font_style: 'H6'

							MDLabel:
								id: lb_no_antrian
								halign: "left"
								valign: "middle"
								font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "No. Pol"
								halign: "left"
								valign: "middle"
								font_style: 'H6'

							MDLabel:
								id: lb_no_pol
								halign: "left"
								valign: "middle"
								font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "No. Uji"
								halign: "left"
								valign: "middle"
								font_style: 'H6'

							MDLabel:
								id: lb_no_uji
								halign: "left"
								valign: "middle"
								font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "Nama"
								halign: "left"
								valign: "middle"
								font_style: 'H6'

							MDLabel:
								id: lb_nama
								halign: "left"
								valign: "middle"
								font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "Jenis Kendaraan"
								halign: "left"
								valign: "middle"
								font_style: 'H6'

							MDLabel:
								id: lb_jenis_kendaraan
								halign: "left"
								valign: "middle"
								font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								id: lb_status
								halign: "left"
								valign: "middle"
								font_style: 'H6'

					MDLabel:
						id: lb_test_result
						halign: "center"
						valign: "middle"
						theme_text_color: "Custom"
						font_style: 'H3'
						size_hint_y: 0.25

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.5

					MDBoxLayout:
						orientation: "horizontal"
						size_hint_y: 0.1

						MDLabel:
							text: "MENU PENGUJIAN"
							halign: "center"
							valign: "middle"
							font_style: 'H6'

					MDBoxLayout:
						orientation: "horizontal"
						size_hint_y: 0.8

						MDBoxLayout:
							orientation: "vertical"
							size_hint_x: 0.2
							spacing: 20
							padding: 40, 0

							MDRectangleFlatIconButton:
								id: bt_S0
								text: "S1"
								icon: "arrow-right"
								theme_text_color: "Custom"
								text_color: "#EEEEEE"
								md_bg_color: "4471C4"
								size_hint: 1, 0.2
								on_press: root.exec_select_axle(1)

							MDRectangleFlatIconButton:
								id: bt_S1
								text: "S2"
								icon: "arrow-right"
								theme_text_color: "Custom"
								text_color: "#EEEEEE"
								md_bg_color: "4471C4"
								size_hint: 1, 0.21
								on_press: root.exec_select_axle(2)

							MDRectangleFlatIconButton:
								id: bt_S2
								text: "S3"
								icon: "arrow-right"
								theme_text_color: "Custom"
								text_color: "#EEEEEE"
								md_bg_color: "4471C4"
								size_hint: 1, 0.2
								on_press: root.exec_select_axle(3)

							MDRectangleFlatIconButton:
								id: bt_S3
								text: "S4"
								icon: "arrow-right"
								theme_text_color: "Custom"
								text_color: "#EEEEEE"
								md_bg_color: "4471C4"
								size_hint: 1, 0.2
								on_press: root.exec_select_axle(4)

							MDRectangleFlatIconButton:
								id: bt_S4
								text: "S5"
								icon: "arrow-right"
								theme_text_color: "Custom"
								text_color: "#EEEEEE"
								md_bg_color: "4471C4"
								size_hint: 1, 0.2
								on_press: root.exec_select_axle(5)

						MDBoxLayout:
							orientation: "vertical"
							size_hint_x: 0.6
							spacing: 30
							
							MDRectangleFlatIconButton:
								id: bt_load
								text: "AXLE LOAD TEST"
								icon: "arrow-right"
								theme_text_color: "Custom"
								text_color: "#EEEEEE"
								md_bg_color: "4471C4"
								size_hint_x: 1.0
								size_hint_y: 0.3
								on_press: root.exec_start_load()

							MDRectangleFlatIconButton:
								id: bt_brake
								text: "MAIN BRAKE TEST"
								icon: "arrow-right"
								theme_text_color: "Custom"
								text_color: "#EEEEEE"
								md_bg_color: "4471C4"
								size_hint_x: 1.0
								size_hint_y: 0.3
								on_press: root.exec_start_brake()

							MDRectangleFlatIconButton:
								id: bt_handbrake
								text: "HAND BRAKE TEST"
								icon: "arrow-right"
								theme_text_color: "Custom"
								text_color: "#EEEEEE"
								md_bg_color: "4471C4"
								size_hint_x: 1.0
								size_hint_y: 0.3
								on_press: root.exec_start_handbrake()

						MDBoxLayout:
							orientation: "vertical"
							size_hint_x: 0.2
							spacing: 20
							padding: 40, 0

							MDRectangleFlatIconButton:
								id: bt_S5
								text: "S6"
								icon: "arrow-right"
								theme_text_color: "Custom"
								text_color: "#EEEEEE"
								md_bg_color: "4471C4"
								size_hint: 1, 0.2
								on_press: root.exec_select_axle(6)

							MDRectangleFlatIconButton:
								id: bt_S6
								text: "S7"
								icon: "arrow-right"
								theme_text_color: "Custom"
								text_color: "#EEEEEE"
								md_bg_color: "4471C4"
								size_hint: 1, 0.2
								on_press: root.exec_select_axle(7)

							MDRectangleFlatIconButton:
								id: bt_S7
								text: "S8"
								icon: "arrow-right"
								theme_text_color: "Custom"
								text_color: "#EEEEEE"
								md_bg_color: "4471C4"
								size_hint: 1, 0.2
								on_press: root.exec_select_axle(8)

							MDRectangleFlatIconButton:
								id: bt_S8
								text: "S9"
								icon: "arrow-right"
								theme_text_color: "Custom"
								text_color: "#EEEEEE"
								md_bg_color: "4471C4"
								size_hint: 1, 0.2
								on_press: root.exec_select_axle(9)

							MDRectangleFlatIconButton:
								id: bt_S9
								text: "S10"
								icon: "arrow-right"
								theme_text_color: "Custom"
								text_color: "#EEEEEE"
								md_bg_color: "4471C4"
								size_hint: 1, 0.2
								on_press: root.exec_select_axle(10)

					MDBoxLayout:
						orientation: "horizontal"
						spacing: 20
						size_hint_y: 0.1

						MDRectangleFlatIconButton:
							id: bt_back
							text: "KEMBALI"
							icon: "arrow-left"
							theme_text_color: "Custom"
							text_color: "#EEEEEE"
							md_bg_color: "4471C4"
							size_hint_x: 0.5
							on_press: root.exec_navigate_main()

						MDRectangleFlatIconButton:
							id: bt_resume
							text: "RESUME"
							icon: "file"
							theme_text_color: "Custom"
							text_color: "#EEEEEE"
							md_bg_color: "#2CA02C"
							size_hint_x: 0.5
							on_press: root.exec_navigate_resume()

		# footer layout
        MDBoxLayout:
            orientation: "horizontal"
			size_hint_y: 0.1

			MDBoxLayout:
				orientation: "horizontal"
				padding: 20
				spacing: 20
				md_bg_color: "#4471C4"
				size_hint_x: 0.4
				
				Image:
					source:'assets/images/logo-sorong.png'
					size_hint_x: 0.1
					allow_stretch: True  

				Image:
					source:'assets/images/logo-dishub.png'
					size_hint_x: 0.1
					allow_stretch: True  

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.8

					MDLabel:			
						text: "PEMERINTAH KABUPATEN SORONG"
						halign: "left"
						valign: "middle"
						font_style: 'Subtitle1'

					MDLabel:			
						text: "DINAS PERHUBUNGAN"
						halign: "left"
						valign: "middle"
						font_style: 'Subtitle1'

					MDLabel:			
						text: "UNIT PELAKSANA UJI BERKALA KENDARAAN BERMOTOR"
						halign: "left"
						valign: "middle"
						font_style: 'Subtitle1'

					MDLabel:
						text: " Klamasen, Distrik Mariat, Kabupaten Sorong, Papua Barat Daya. 98416"
						halign: "left"
						valign: "middle"
						md_bg_color: "#EEEEEE"
						theme_text_color: "Custom"
						text_color: "#000000"
						font_style: 'Subtitle1'

			MDBoxLayout:
				orientation: "vertical"
				padding: 20
				spacing: 20
				md_bg_color: "#FFC000"
				size_hint_x: 0.6

				MDLabel:			
					text: "INFORMASI"
					halign: "left"
					valign: "middle"
					font_style: 'H5'

				MDLabel:
					id: lb_info
					text: "Silahkan pilih nomor Sumbu yang akan di uji kemudian pilih menu jenis pengujian untuk masing masing Sumbu"
					halign: "left"
					valign: "middle"
					font_style: 'H6'